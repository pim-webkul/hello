name: CI/CD Pipeline

on:
  push:
    branches:
      - main  # Adjust branch name as needed
  pull_request:
    branches:
      - main  # Adjust branch name as needed

jobs:
  build:
    name: Deploy to Server
    timeout-minutes: 30
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up JDK 11
        uses: actions/setup-java@v2
        with:
          java-version: '11'

      - name: Build and Test
        run: |
          ./gradlew build  # Example for a Java project using Gradle

      - name: Deploy to Server
        if: success()
        run: |
          ssh user@your-server 'bash -s' < deploy-script.sh
